<p id="notice"><%= notice %></p>

<% if current_user.is_admin == true %>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.is_admin == true %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Delete', delete_user_path(user), :method => :get %></td>
        <td><%= button_to 'Remove Admin Permission', unmake_admin_path(user), :method => :get %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Normal Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UIN</th>
      <th>Is Officer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.is_admin == false %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= user.is_officer %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Delete', delete_user_path(user), :method => :get %></td>
        <% if user.is_officer == false %>
          <td><%= button_to 'Make an Officer', make_officer_user_path(user), :method => :get %></td>
        <% end %>
        <% if user.is_officer == true %>
          <td><%= button_to 'Unmake an Officer', unmake_Officer_user_path(user), :method => :get %></td>
        <% end %>
        <td><%= button_to 'Give Admin Permissions', make_admin_path(user), :method => :get %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Officers Awaiting Admin Privileges</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.officer_apply == true && user.is_admin == false %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Accept Officer Request', make_officer_user_path(user), :method => :get %></td>
        <td><%= button_to 'Deny Officer/Admin Request', unmake_Officer_user_path(user), :method => :get %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Officers</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.is_officer == true %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <% if user.is_admin == false %>
          <td><%= button_to 'Give Admin Permissions', make_admin_path(user), :method => :get %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

