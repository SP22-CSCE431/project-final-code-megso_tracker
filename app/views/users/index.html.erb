<p id="notice"><%= notice %></p>

<h1>Users</h1>

<p>Current User is <%= current_user.first_name %></p>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UID</th>
      <th>Is Admin</th>
      <th>Is Officer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= user.is_admin %></td>
        <td><%= user.is_officer %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Delete', delete_user_path(user), :method => :get %></td>
        <td><%= button_to 'Make an Admin!', make_admin_path(user), :method => :get %></td>
        <td><%= button_to 'Remove Admin Permission!', unmake_admin_path(user), :method => :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>
