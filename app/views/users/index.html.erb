<p id="notice"><%= notice %></p>

<% if current_user.is_admin == true %>

<p>Current User is <%= current_user.first_name %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.is_admin == true %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Delete', delete_user_path(user), :method => :get %></td>
        <td><%= button_to 'Remove Admin Permission!', unmake_admin_path(user), :method => :get %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Normal Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.is_admin == false %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Delete', delete_user_path(user), :method => :get %></td>
        <td><%= button_to 'Make an Admin!', make_admin_path(user), :method => :get %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Officers Awaiting Admin Privileges</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>UID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.is_officer == true && user.is_admin == false %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.UID %></td>
        <td><%= button_to 'Show', user, :method => :get %></td>
        <td><%= button_to 'Delete', delete_user_path(user), :method => :get %></td>
        <td><%= button_to 'Make an Admin!', make_admin_path(user), :method => :get %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if current_user.is_admin == false %>
  <h1>You do not have access to this page!</h1>
<% end %>