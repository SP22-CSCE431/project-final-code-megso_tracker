<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-4">
  </div>
  <div class= "card col-4">
    <div class="card-header">
      <p>
        <%= @user.first_name %> <%= @user.last_name %>
      </p>
    </div>
    <div class="card-body">
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>UIN:</strong>
        <%= @user.UID %>
      </p>

      <p>
        <strong>Points:</strong>
        <%= @user.points %>
      </p>

      <p>
        <strong>Rewards Earned:</strong>
        <%= @user.rewards_earned %>
      </p>

      <% if @user.is_admin == true %>
        <p>
          <strong>Is an Admin?</strong>
          <p>Yes</p>
        </p>
      <% end %>

      <% if @user.is_officer == true %>
        <p>
          <strong>Is an Officer?</strong>
          <p>Yes</p>
        </p>
      <% else %>
        <p>
        <strong>Is an Officer?</strong>
        <p>No</p>
        </p>
      <% end %>
    </div>
  </div>
  <div class="col-4">
  </div>
</div>


<br>
<div class="row">
  <div class="col-md-5">
  </div>
  <div class="col-md-1 button-col">
    <%= button_to 'Edit', edit_user_path(@user), :method => :get, class: "btn btn-outline-secondary" %>
  </div>
  <div class="col-md-1 button-col">
    <%= button_to 'Logout', logout_path, :method => :delete, class: "btn btn-outline-secondary" %>
  </div>
  <div class="col-md-5">
  </div>
</div>

<br>
<% if current_user.officer_apply == false && current_user.is_admin == false && current_user.is_officer == false %>
<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4 button-col">
    <%= button_to 'Apply to be an Officer!', applyOfficer_user_path(current_user), :method => :get, class: "btn btn-secondary" %>
  </div>
  <div class="col-md-4">
  </div>
<% end %>