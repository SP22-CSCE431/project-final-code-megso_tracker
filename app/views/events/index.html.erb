<div class="row">
  <div class = "col">
  </div>
  <div class = "col-3">
    <h1>Events</h1>
    <p id="notice"><%= notice %></p>
    <p>Current User is <%= current_user.first_name %></p>
  </div>
  <div class = "col">
  </div>
</div>
<div class="card col-10">
  <%= button_to 'New Event', new_event_path, :method => :get, class:"btn btn-primary new-event" %>
<div class = "table-responsive bdr">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Event Name</th>
        <th scope="col">Amount of Points</th>
        <th scope="col">Event Location</th>
        <th scope="col">Event Date</th>
        <th scope="col">Start Time</th>
        <th scope="col">End Time</th>
        <th scope="col">Event Verification Code</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
      <tr ng-repeat="p in tableData" ng-mouseover="row = $index" ng-mouseleave="row = -1">
        <td scope="row"><%= link_to event.event_name, event, :method => :get %></td>
        <td><%= event.event_point %></td>
        <td><%= event.event_location %></td>
        <td><%= event.event_date %></td>
        <td><%= event.event_start %></td>
        <td><%= event.event_end %></td>
        <td><%= event.event_verification %></td>
        <td>
            <div class="btn-group btn-group-xs mb-2 mb-md-0 btn-block">
              <%= button_to 'Register', register_event_path(event), class: "btn btn-secondary" %>
              <%= button_to 'Edit', edit_event_path(event), :method => :get, class: "btn btn-outline-secondary" %>
              <%= button_to 'Delete', delete_event_path(event), :method => :get, class: "btn btn-secondary" %>
            </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
