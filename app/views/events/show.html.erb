<p id="notice"><%= notice %></p>

<p>
  <strong>Event Name:</strong>
  <%= @event.event_name %>
</p>

<p>
  <strong>Event Point:</strong>
  <%= @event.event_point %>
</p>

<p>
  <strong>Event Location:</strong>
  <%= @event.event_location %>
</p>

<p>
  <strong>Event Date:</strong>
  <%= @event.event_date %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @event.event_start %>
</p>

<p>
  <strong>End Time:</strong>
  <%= @event.event_end %>
</p>

<% if current_user.is_admin == true %>
<p>
  <strong>Event Verification Code:</strong>
  <%= @event.event_verification %>
</p>
<% end %>

<p>
  <strong>Event Description:</strong>
  <br><%= @event.event_description %>
</p>

<br>

<% if current_user.is_admin == true %>
<table>
  <thead>
    <tr>
      <th>Attendence List:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee_list| %>
      <tr>
        <td><%= get_current_user_first_name attendee_list.UID %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<table>
      <thead>
        <tr>
          <% if current_user.is_admin == true %>
            <th><%= button_to 'Edit', edit_event_path(@event), :method => :get %></td>
          <% end %>
          <th><%= button_to 'Back to Event List', events_path, :method => :get %></td>
        </tr>
      </thead>
</table>

