<p id="notice"><%= notice %></p>

<% if current_user.is_admin == true %>

<h1>Alumnis</h1>

<table>
  <thead>
    <tr>
      <th>LinkedIn URL</th>
      <th>Graduation Year</th>
      <th>Highest Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnis.each do |alumni| %>
      <tr>
        <td><%= alumni.LinkedIn %></td>
        <td><%= alumni.alumni_grad_year %></td>
        <td><%= alumni.highest_position %></td>
        <td><%= button_to 'Show', alumni, :method => :get %></td>
        <td><%= button_to 'Edit', edit_alumni_path(alumni), :method => :get %></td>
        <td><%= button_to 'Delete', delete_alumni_path(alumni), :method => :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Add Alumni', new_alumni_path, :method => :get %>
<% end %>

<% if current_user.is_admin == false %>
  <h1>You do not have access to this page!</h1>
<% end %>
