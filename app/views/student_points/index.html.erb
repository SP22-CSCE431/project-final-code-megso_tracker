<p id="notice"><%= notice %></p>

<h1>Rewards!</h1>

<table>
  <thead>
    <tr>
      <th>Your Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_points.each do |student_point| %>
      <tr>
        <td><%= student_point.points %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Rewards Available!</h1>

<table>
  <thead>
    <tr>
      <th>Reward</th>
      <th>Point Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_rewards.each do |reward| %>
      <tr>
        <td><%= reward.reward %></td>
        <td><%= reward.point_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
