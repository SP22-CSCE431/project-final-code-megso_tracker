<p id="notice"><%= notice %></p>

<p>
  <strong>Reward Name:</strong>
  <%= @reward.reward_name %>
</p>

<p>
  <strong>Points Required:</strong>
  <%= @reward.reward_points %>
</p>

<p>
  <strong>Reward Description:</strong>
  <br><%= @reward.reward_description %>
</p>

<table>
      <thead>
        <tr>
          <% if current_user.is_admin == true %>
            <th><%= button_to 'Edit', edit_reward_path(@reward), :method => :get %></td>
          <% end %>
          <th><%= button_to 'Back to Reward List', rewards_path, :method => :get %></td>
        </tr>
      </thead>
</table>

