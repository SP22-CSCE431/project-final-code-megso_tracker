<h1>Rewards (Admin)</h1>

<table>
  <thead>
    <tr>
      <th>Reward</th>
      <th>Points Required</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.reward_name %></td>
        <td><%= reward.reward_points %></td>
        <td><%= link_to 'Show', reward %></td>
        <td><%= link_to 'Edit (Admin Only)', edit_reward_path(reward) %></td>
        <td><%= link_to 'Delete (Admin Only)', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

